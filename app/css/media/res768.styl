/* Small Devices, Tablets */
@media only screen and (max-width : 768px) {
	.header-arrowImg{
		margin-bottom 0
	}
	.changes-element{
		width 60%
		margin 20px auto
		height 180px
	}
	.form-step{
		display block
	}
	.form-block-element{
		.form-block-element-left{
			display none
		}
	}
	.form-block-element-right{
		width 100%
		border 0px
		padding 0
	}
	.footer-line{
		font-size 60px
	}
	.play{
		margin-right -10px
	}
	.slogan-block{
 		justify-content: center;
 }
 .modal-content{
 	.youtube{
 		width 90%
 		height 70% 
 	}
 }
 .tarif-element{
 	width: 70%;
	margin: 20px auto;
 }
 
}
